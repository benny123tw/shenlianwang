<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suntech.rsmit2_demo.MainActivity" >

    <LinearLayout 
        android:id="@+id/Demo_Btn_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <Button 
	       android:id="@+id/Demo_StartBtn"
	       android:layout_width="100dp"
	       android:layout_height="50dp"
	       android:textSize="17sp"
	       />
        <Button 
            android:id="@+id/Demo_StopBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="17sp"
            />

    </LinearLayout>
    
    <!-- Error -->
    <LinearLayout 
        android:id="@+id/Demo_Error_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/Demo_Btn_LL"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/Demo_Error_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|center"
            android:textSize="17sp"
            />
        <EditText 
            android:id="@+id/Demo_Error_Edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            />
    </LinearLayout>

    <!-- title -->
    <LinearLayout 
        android:id="@+id/Demo_Title_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/Demo_Error_LL"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/Demo_Title_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|center"
            android:textSize="17sp"
            />
        <EditText 
            android:id="@+id/Demo_Title_Edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            />
    </LinearLayout>
    
    <!-- action -->
    <LinearLayout 
        android:id="@+id/Demo_Action_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Demo_Title_LL"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/Demo_Action_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|center"
            android:textSize="17sp"
            />
        <EditText 
            android:id="@+id/Demo_Action_Edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            />
    </LinearLayout>
    
    <!-- value1 -->
    <LinearLayout 
        android:id="@+id/Demo_Value1_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Demo_Action_LL"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/Demo_Value1_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|center"
            android:textSize="17sp"
            />
        <EditText 
            android:id="@+id/Demo_Value1_Edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            />
    </LinearLayout>
    
    <!-- value2 -->
    <LinearLayout 
        android:id="@+id/Demo_Value2_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Demo_Value1_LL"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/Demo_Value2_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|center"
            android:textSize="17sp"
            />
        <EditText 
            android:id="@+id/Demo_Value2_Edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            />
    </LinearLayout>
    
    <!-- group -->
    <LinearLayout 
        android:id="@+id/Demo_Group_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Demo_Value2_LL"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/Demo_Group_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left|center"
            android:textSize="17sp"
            />
        <EditText 
            android:id="@+id/Demo_Group_Edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            />
    </LinearLayout>
    
    <!-- type -->
    <LinearLayout 
        android:id="@+id/Demo_Type_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Demo_Group_LL"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/Demo_Type_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left|center"
            android:textSize="17sp"
            />
        <EditText 
            android:id="@+id/Demo_Type_Edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            />
    </LinearLayout>

</RelativeLayout>
